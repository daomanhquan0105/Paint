
@{
    ViewBag.Title = "ListProduct";
}

<div class="list-product">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-3 d-none d-lg-block">
                @Html.Action("MenuXLPartial", "Home")
            </div>
            <div class="col-12 col-lg-9">
                @Html.Action("ListProdutPartial", "Home")
            </div>
        </div> 

        <div class="category-panit d-block d-lg-none">
            <div class="title">
                BÀI ĐĂNG GẦN ĐÂY
            </div>
            <hr />
            <div class="row">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="col-6 col-md-4 col-lg mb-3">
                        <div class="card">
                            <img src="~/Images/Post/Rectangle 38.svg" class="card-img-top" />
                            <div class="card-body">
                                <div class="product-name">
                                    <a href="#">Lorem ipsum dolor sit amet consectetuer adipiscing</a>
                                </div>
                                <div class="create-date">
                                    <i class="far fa-calendar-alt mr-2"></i>  25/02/2020
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>
</div>

