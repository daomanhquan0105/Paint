@using WebPanit.Models;
@using WebPanit.ViewModel;
@model PaintColor
@{
    ViewBag.Title = "Báo giá sơn";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
}
<div class="breadcrumb">
    <a href="@Url.Action("Index","Home")" class="mb-2"><i class="fas fa-home"></i></a>
    <span> Báo giá sơn </span>
</div>
@Html.Raw(config.PricePaint)
<div class="row List-post">
    @foreach (Post post in Model.Posts)
    {
        <div class="col-6 col-sm-3 col-md-4 mb-4 text-left">
            <div class="card">
                <a href="@Url.Action("PostDetail","Home",new { id=post.Id,name=Html.ConvertToUnSign(post.Subject) })" class="image">
                    <img src="~/Images/Posts/@post.Image" class="card-img-top" />
                </a>
                <div class="card-body">
                    <div class="subject mb-2">
                        <a href="@Url.Action("PostDetail","Home",new { id=post.Id,name=Html.ConvertToUnSign(post.Subject) })">
                            Lorem ipsum dolor sit amet consec tetuer adipiscing
                        </a>
                    </div>
                    <div class="create-date mb-3">
                        <i class="far fa-calendar-alt mr-2"></i>  @post.CreateDate.ToString("MMMM/dd/yyyy").Replace('/', ' ')
                    </div>
                    <div class="content">
                        Lorem Ipsum is simply dummy text of the printing and typeset ting industry. Lorem Ipsum has been ..
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="row text-center table-paint">
    @foreach (TradeMark tradeMark in Model.tradeMarks)
    {
        <div class="col-6 col-sm-3 col-md-4 col-lg-3 mb-4">
            <div class="card">
                <a href="@Url.Action("ListProduct","Home",new { tradeMarkID= tradeMark.Id,name=Html.ConvertToUnSign(tradeMark.Name)})" class="image">
                    <img src="~/Images/TradeMarks/@tradeMark.Avatar" />
                </a>
                <div class="card-body">
                    <div class="product-name">
                        <a href="@Url.Action("ListProduct","Home",new { tradeMarkID= tradeMark.Id,name=Html.ConvertToUnSign(tradeMark.Name)})">
                            Bảng màu sơn <br />
                            @tradeMark.Name
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>